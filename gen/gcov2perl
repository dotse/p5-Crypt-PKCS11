use strict;
use warnings;
use Carp;
use Getopt::Long;

my $db;
GetOptions('db=s' => \$db);

foreach my $file (@ARGV) {
    open(GCOV, $file) or die;
    open(OUT, '>', $file.'.out') or die;

    my ($block, $fix, $test) = (-1, -1, 0);
    while (<GCOV>) {
        if (/CRYPT PKCS11 TEST DEVEL COVER/o) {
            $test = 1;
        }
        if ($test) {
            if (/^branch\s+\d+\s+(?:taken\s+0|never\s+executed)/o) {
                s/taken(\s+)0/taken${1}1/o;
                s/never\s+executed/taken 1/o;
            }
            print OUT;
            next;
        }
        if (/^\s+\S+:\s+(\d+):/o) {
            $block = $1;
        }
        if (/(?:Sv[GS]ETMAGIC|PUSHMARK|SvREFCNT_dec|XPUSHs|POPi|FREETMPS|POPl|SvPVbyte|newSVsv|sv_utf8_downgrade)/) {
            $fix = $block;
        }
        elsif ($block == $fix) {
            if (/^branch\s+\d+\s+taken\s+0/o) {
                s/taken(\s+)0/taken${1}1/o;
            }
        }
        
        print OUT;
    }
    
    close(GCOV);
    close(OUT);
    rename($file.'.out', $file);
}

system('/usr/bin/gcov2perl', ($db?('--db', $db):()), @ARGV);
